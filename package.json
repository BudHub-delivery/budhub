{
    "name": "server",
    "version": "1.0.0",
    "description": "",
    "main": "index.js",
    "scripts": {
        "setup": "cd client && npm i && cd ../ && npm i && npm run merge-schemas && npm run deploy",
        "start": "npm run build && npm run deploy && ts-node server.ts",
        "build": "cd client && npm run build",
        "dev": "nodemon server.ts",
        "seed": "npx prisma migrate reset && cd ./prisma && ts-node seed.ts",
        "merge-schemas": "npx tsc merge-schemas && node merge-schemas.js",
        "deploy": "npx prisma generate && npx prisma migrate dev && npx prisma migrate deploy",
        "clear_prisma_cache": "rm -r node_modules/.prisma/ && npx prisma generate",
        "test-server": "jest --config ./jest.server.config.ts",
        "test-client": "jest --config ./jest.client.config.ts",
        "test:watch": "jest --watch"
    },
    "devDependencies": {
